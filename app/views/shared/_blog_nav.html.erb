<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <a class="text-muted" href="#">Explore the new World of Blog Writing</a>
    </div>
    <div class="col-4 text-center">
      <a class="blog-header-logo text-dark" href="#">Welcome, <%= current_user.first_name %></a>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <%= link_to "Home", root_path, class: "btn btn-sm btn-link"%>
      <%= link_to "Blogs", blogs_path, class: "btn btn-sm btn-link"%>
      <%= link_to "Portfolios", portfolios_path, class: "btn btn-sm btn-link"%>
      <%= login_helper('btn btn-sm btn-light')%>
    </div>
  </div>
</header>
