<div class="col-md-3">
  <div class="card mb-3 box-shadow" style="width: 100%; height: 90%">
    <%= image_tag "portfolio_basic_image.png", width: '100%' if !portfolio_item.thumb_image.nil?%>
    <div class="card-body" style="width: 90%; height: 90%">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id)%></p>
      <p class="card-text"><%= portfolio_item.subtitle%></p>
      <p class="card-text">Name : <%= portfolio_item.user.first_name if !portfolio_item.user.nil? %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'Edit', edit_portfolio_path(portfolio_item.id), class: "btn btn-sm btn-outline-success" if logged_in?(:site_admin)%>
          <%= link_to 'Delete', portfolio_item, method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: 'Are you sure?'} if logged_in?(:site_admin)%>
        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now)%> ago</small>
      </div>
    </div>
  </div>
</div>
